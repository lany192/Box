<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <LinearLayout
        android:id="@+id/view_footer_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/loading_progress"
            style="?android:progressBarStyleInverse"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/refresh_more_loading" />

        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/loading"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_footer_fail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/load_failed"
            android:textColor="#999999"
            android:textSize="12sp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/view_footer_end_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="72dp"
            android:layout_height="1px"
            android:background="#dddddd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="已经到底啦~"
            android:textColor="#999999"
            android:textSize="12sp" />

        <View
            android:layout_width="72dp"
            android:layout_height="1px"
            android:background="#dddddd" />
    </LinearLayout>
</FrameLayout>